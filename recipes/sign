local function plank()
  return {
    idname = 'minecraft:planks',
    data = nil,
  }
end

local function stick()
  return {
    idname = 'minecraft:stick',
    data = 0,
  }
end

return {
  shape = {
    plank(), plank(), plank(),
    plank(), plank(), plank(),
    nil, stick(), nil,
  },
  output = {
    item = {
      idname = 'minecraft:sign',
      data = 0,
    },
    count = 3,
  },
  type = 'craft',
}


local function glass()
  return {
    idname = 'minecraft:glass',
    data = 0,
  }
end

local function plate()
  return {
    idname = 'IC2:itemPartAlloy',
    data = 0,
  }
end

return {
  shape = {
    glass(), plate(), glass(),
    glass(), glass(), glass(),
    glass(), plate(), glass(),
  },
  output = {
    item = {
      idname = 'IC2:blockAlloyGlass',
      data = 0,
    },
    count = 7,
  },
  type = 'craft',
}


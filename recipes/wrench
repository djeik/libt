local function iron()
  return {
    idname = 'minecraft:iron_ingot',
    data = 0,
  }
end

local function gear()
  return {
    idname = 'BuildCraft|Core:stoneGearItem',
    data = 0,
  }
end

return {
  shape = {
    iron(), nil, iron(),
    nil, gear(), nil,
    nil, iron(), nil,
  },
  output = {
    item = {
      idname = 'BuildCraft|Core:wrenchItem',
      data = 0,
    },
    count = 1,
  },
  type = 'craft',
}

